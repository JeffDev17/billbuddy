            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">
              <%= credit_paid %> pagaram
            </div>
            <div class="text-sm">
              <span class="font-medium text-green-600 dark:text-green-400" data-controller="sensitive-data">
                <span data-sensitive-data-target="content">R$ <%= number_with_precision(@credit_received, precision: 2) %></span>
              </span>
