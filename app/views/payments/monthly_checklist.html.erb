          <%= I18n.l(target_month, format: "%b/%Y") %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<script>
// Inline Payment Amount Editing
function editAmount(customerId) {
  const container = document.querySelector(`[data-customer-id="${customerId}"] .payment-amount-container`);
  const displayDiv = container.querySelector('.amount-display');
  const editDiv = container.querySelector('.amount-edit');
  const input = editDiv.querySelector('input');
  
  displayDiv.classList.add('hidden');
  editDiv.classList.remove('hidden');
  input.focus();
  input.select();
}

function saveAmount(customerId) {
  const container = document.querySelector(`[data-customer-id="${customerId}"] .payment-amount-container`);
  const displayDiv = container.querySelector('.amount-display');
  const editDiv = container.querySelector('.amount-edit');
  const input = editDiv.querySelector('input');
  const newAmount = parseFloat(input.value);
  
  if (isNaN(newAmount) || newAmount <= 0) {
    alert('Por favor, insira um valor v√°lido');
    input.focus();
    return;
  }
  
  // Update payment amount via AJAX
  const month = '<%= @selected_month %>';
  
  fetch('/payments/update_payment_amount', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: JSON.stringify({
      customer_id: customerId,
      month: month,
      amount: newAmount
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      // Update display
      const amountSpan = displayDiv.querySelector('.amount-value');
      amountSpan.textContent = newAmount.toFixed(2);
      
      // Show edit indicator if different from calculated amount
      const editIndicator = displayDiv.querySelector('.text-blue-600');
      if (data.is_manual_override && !editIndicator) {
        const subtitleDiv = displayDiv.querySelector('.text-xs');
        subtitleDiv.innerHTML += ' <span class="text-blue-600 dark:text-blue-400">‚úèÔ∏è</span>';
      }
      
      // Switch back to display mode
      editDiv.classList.add('hidden');
      displayDiv.classList.remove('hidden');
      
      // Show success feedback
      showToast('Valor atualizado com sucesso!', 'success');
    } else {
      alert('Erro ao atualizar valor: ' + data.message);
      input.focus();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Erro ao atualizar valor');
    input.focus();
  });
}

function handleAmountKeypress(event, customerId) {
  if (event.key === 'Enter') {
    event.preventDefault();
    saveAmount(customerId);
  } else if (event.key === 'Escape') {
    // Cancel editing
    const container = document.querySelector(`[data-customer-id="${customerId}"] .payment-amount-container`);
    const displayDiv = container.querySelector('.amount-display');
    const editDiv = container.querySelector('.amount-edit');
    
    editDiv.classList.add('hidden');
    displayDiv.classList.remove('hidden');
  }
}

function showToast(message, type = 'info') {
  // Simple toast notification
  const toast = document.createElement('div');
  toast.className = `fixed top-4 right-4 px-4 py-2 rounded shadow-lg z-50 ${
    type === 'success' ? 'bg-green-500 text-white' : 'bg-blue-500 text-white'
  }`;
  toast.textContent = message;
  
  document.body.appendChild(toast);
  
  setTimeout(() => {
    toast.remove();
  }, 3000);
}
</script> 