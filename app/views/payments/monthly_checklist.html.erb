        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
          <%= @customers.count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Total</div>
      </div>
    </div>

    <!-- Totais Financeiros -->
