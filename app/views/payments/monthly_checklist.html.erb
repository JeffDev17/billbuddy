<div class="container mx-auto px-4" 
     data-controller="payment-status bulk-payment" 
     data-bulk-payment-month-value="<%= @selected_month %>">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
      ğŸ“‹ Checklist de Pagamentos - <%= I18n.l(@month_date, format: "%B %Y").capitalize %>
    </h1>
    
    <div class="flex items-center space-x-4">
      <!-- Global Sensitive Data Toggle -->
      <div data-controller="global-sensitive-data">
        <button type="button" 
                data-action="click->global-sensitive-data#toggle"
                class="flex items-center space-x-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
          <span data-global-sensitive-data-target="toggleIcon">ğŸ‘ï¸â€ğŸ—¨ï¸</span>
          <span>Mostrar Valores</span>
        </button>
      </div>
      
      <!-- Seletor de mÃªs -->
      <%= form_with url: monthly_checklist_payments_path, method: :get, class: "flex items-center space-x-2" do |form| %>
        <%= form.hidden_field :sort_by, value: @sort_by %>
        <%= form.month_field :month, 
            value: @selected_month, 
            class: "px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
        <%= form.submit "Ver MÃªs", class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md dark:bg-indigo-700 dark:hover:bg-indigo-800" %>
      <% end %>
    </div>
  </div>

  <!-- EstatÃ­sticas do mÃªs -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">

    <!-- EstatÃ­sticas Principais -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="text-center">
        <div class="text-2xl font-bold text-green-600 dark:text-green-400" 
             data-payment-status-target="paidCount">
          <%= @payments_by_customer.values.flatten.count(&:paid?) %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Pagaram</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400" 
             data-payment-status-target="cancelledCount">
          <%= @payments_by_customer.values.flatten.count(&:cancelled?) %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Cancelados</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-red-600 dark:text-red-400" 
             data-payment-status-target="pendingCount">
          <%= @customers.count - @payments_by_customer.count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Pendentes</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
          <%= @customers.count %>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Total</div>
      </div>
    </div>

    <!-- Totais Financeiros -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
      <h4 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">ğŸ’° Resumo Financeiro</h4>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
        <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg">
          <div class="text-center">
            <div class="text-xl font-bold text-green-600 dark:text-green-400" 
                 data-payment-status-target="totalReceived" 
                 data-controller="sensitive-data">
              <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_received, precision: 2) %></span>
            </div>
            <div class="text-sm text-green-700 dark:text-green-300">Total Recebido</div>
          </div>
        </div>
        <div class="bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-lg">
          <div class="text-center">
            <div class="text-xl font-bold text-yellow-600 dark:text-yellow-400" 
                 data-payment-status-target="totalCancelled"
                 data-controller="sensitive-data">
              <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_cancelled, precision: 2) %></span>
            </div>
            <div class="text-sm text-yellow-700 dark:text-yellow-300">Total Cancelado</div>
          </div>
        </div>
        <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
          <div class="text-center">
            <div class="text-xl font-bold text-blue-600 dark:text-blue-400" data-controller="sensitive-data">
              <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_expected, precision: 2) %></span>
            </div>
            <div class="text-sm text-blue-700 dark:text-blue-300">Total Esperado</div>
          </div>
        </div>
        <div class="bg-red-50 dark:bg-red-900/20 p-4 rounded-lg">
          <div class="text-center">
            <div class="text-xl font-bold text-red-600 dark:text-red-400" 
                 data-payment-status-target="totalPending"
                 data-controller="sensitive-data">
              <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_pending, precision: 2) %></span>
            </div>
            <div class="text-sm text-red-700 dark:text-red-300">Total Pendente</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Detalhamento por tipo de cliente -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
          <% subscription_customers = @customers.select { |customer| customer.plan_type == 'subscription' } %>
          <% subscription_paid = @payments_by_customer.select { |customer_id, _| subscription_customers.any? { |customer| customer.id == customer_id } }.count %>
          <div class="text-center">
            <div class="text-lg font-semibold text-purple-600 dark:text-purple-400">
              ğŸ“… <%= subscription_customers.count %> Assinaturas
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">
              <%= subscription_paid %> pagaram
            </div>
            <div class="text-sm">
              <span class="font-medium text-green-600 dark:text-green-400" data-controller="sensitive-data">
                <span data-sensitive-data-target="content">R$ <%= number_with_precision(@subscription_received, precision: 2) %></span>
              </span>
              <span class="text-gray-500 dark:text-gray-400"> / </span>
              <span class="font-medium text-purple-600 dark:text-purple-400" data-controller="sensitive-data">
                <span data-sensitive-data-target="content">R$ <%= number_with_precision(@subscription_expected, precision: 2) %></span>
              </span>
            </div>
          </div>
        </div>
        
        <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
          <% credit_customers = @customers.select { |customer| customer.plan_type == 'credit' } %>
          <% credit_paid = @payments_by_customer.select { |customer_id, _| credit_customers.any? { |customer| customer.id == customer_id } }.count %>
          <div class="text-center">
            <div class="text-lg font-semibold text-blue-600 dark:text-blue-400">
              ğŸ’³ <%= credit_customers.count %> CrÃ©ditos
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-2">
              <%= credit_paid %> pagaram
            </div>
            <div class="text-sm">
              <span class="font-medium text-green-600 dark:text-green-400" data-controller="sensitive-data">
                <span data-sensitive-data-target="content">R$ <%= number_with_precision(@credit_received, precision: 2) %></span>
              </span>
              <span class="text-gray-500 dark:text-gray-400"> / </span>
              <span class="font-medium text-blue-600 dark:text-blue-400" data-controller="sensitive-data">
                <span data-sensitive-data-target="content">R$ <%= number_with_precision(@credit_expected, precision: 2) %></span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de clientes -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Lista de Clientes</h3>
          
          <!-- Bulk Actions - Show for all months now -->
          <div data-bulk-payment-target="bulkActions" class="flex items-center space-x-3" style="display: none;">
            <span class="text-sm text-gray-600 dark:text-gray-400">
              <span data-bulk-payment-target="selectedCount">0</span> selecionados
            </span>
            <button data-bulk-payment-target="markSelectedPaid"
                    data-action="click->bulk-payment#markSelectedAsPaid"
                    class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white text-sm rounded-md transition-colors duration-200">
              âœ… Marcar Selecionados
            </button>
            <button data-bulk-payment-target="markAllPaid"
                    data-action="click->bulk-payment#markAllAsPaid"
                    class="px-3 py-1 bg-purple-600 hover:bg-purple-700 text-white text-sm rounded-md transition-colors duration-200">
              ğŸ’° Marcar Todos como Pagos
            </button>

          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <!-- Sorting selector in header -->
          <%= form_with url: monthly_checklist_payments_path, method: :get, class: "flex items-center space-x-2" do |form| %>
            <%= form.hidden_field :month, value: @selected_month %>
            <%= form.label :sort_by, "ğŸ” Ordenar por:", class: "text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= form.select :sort_by, 
                options_for_select([
                  ['ğŸ“ Nome', 'name'],
                  ['âœ… Status: Pagos Primeiro', 'payment_status'],
                  ['â³ Status: Pendentes Primeiro', 'payment_status_reverse'],
                  ['ğŸ“… Tipo de Plano', 'plan_type'],
                  ['ğŸ’° Valor: Maior Primeiro', 'package_value'],
                  ['ğŸ’° Valor: Menor Primeiro', 'package_value_asc']
                ], @sort_by),
                {},
                { class: "px-2 py-1 text-sm border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                  onchange: "this.form.submit()" } %>
          <% end %>
        </div>
      </div>
      
      <!-- Select All Checkbox - Show for all months now -->
      <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
        <label class="flex items-center space-x-2">
          <input type="checkbox" 
                 data-bulk-payment-target="selectAll"
                 data-action="change->bulk-payment#toggleSelectAll"
                 class="rounded border-gray-300 dark:border-gray-600 text-indigo-600 focus:ring-indigo-500 dark:focus:ring-indigo-400">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
            Selecionar Todos os Clientes
          </span>
        </label>
      </div>
    </div>

    <div class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @customers.each do |customer| %>
        <% payment = @payments_by_customer[customer.id]&.first %>
        <% current_status = payment&.status || 'pending' %>
        
        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700
                    <%= case current_status
                        when 'paid' then 'bg-green-50 dark:bg-green-900/10 border-l-4 border-green-400'
                        when 'cancelled' then 'bg-yellow-50 dark:bg-yellow-900/10 border-l-4 border-yellow-400'
                        else 'bg-red-50 dark:bg-red-900/10 border-l-4 border-red-400'
                        end %>" 
             data-customer-id="<%= customer.id %>">
          
          <!-- Checkbox for bulk selection (show for all months) -->
          <div class="flex-shrink-0 mr-4">
            <input type="checkbox" 
                   data-bulk-payment-target="checkbox"
                   data-action="change->bulk-payment#toggleCheckbox"
                   data-customer-id="<%= customer.id %>"
                   data-current-status="<%= current_status %>"
                   class="rounded border-gray-300 dark:border-gray-600 text-indigo-600 focus:ring-indigo-500 dark:focus:ring-indigo-400">
          </div>
          
          <!-- InformaÃ§Ãµes do cliente -->
          <div class="flex items-center space-x-4 flex-1">
            <!-- Avatar e nome -->
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 <%= customer.subscription? ? 'bg-indigo-500' : 'bg-blue-500' %> rounded-full flex items-center justify-center text-white font-medium">
                  <%= customer.name.first.upcase %>
                </div>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                  <%= customer.name %>
                  <!-- Indicador do tipo de plano -->
                  <% if customer.subscription? %>
                    <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                      ğŸ“… Assinatura
                    </span>
                  <% else %>
                    <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                      ğŸ’³ CrÃ©dito
                    </span>
                  <% end %>
                  
                  <!-- Indicator for inactive customers in historical months -->
                  <% if @is_past_month && customer.status != 'active' %>
                    <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                      ğŸ HistÃ³rico
                    </span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">
                  <%= customer.email.present? ? customer.email : "Email nÃ£o informado" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Status e valor -->
          <div class="flex items-center space-x-4">
            <!-- Valor da mensalidade/crÃ©dito -->
            <div class="text-right">
              <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                R$ <%= number_with_precision(customer.package_total_value, precision: 2) %>
              </div>
              <div class="text-xs text-gray-500 dark:text-gray-400">
                <%= customer.subscription? ? 'Mensalidade' : 'Ãšltimo CrÃ©dito' %>
              </div>
            </div>

            <!-- Status de pagamento - Now always editable -->
            <div class="payment-status" data-customer-id="<%= customer.id %>">
              <select class="px-3 py-1 rounded-md text-xs font-medium border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400"
                      data-payment-status-target="statusSelect"
                      data-action="change->payment-status#updateStatus"
                      data-customer-id="<%= customer.id %>"
                      data-month="<%= @selected_month %>"
                      data-current-status="<%= current_status %>">
                <option value="pending" <%= 'selected' if current_status == 'pending' %>>â³ Pendente</option>
                <option value="paid" <%= 'selected' if current_status == 'paid' %>>âœ… Pago</option>
                <option value="cancelled" <%= 'selected' if current_status == 'cancelled' %>>âŒ Cancelado</option>
              </select>
            </div>

            <!-- Link para perfil do cliente -->
            <%= link_to customer_path(customer), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @customers.empty? %>
        <div class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
          <div class="text-lg mb-2">ğŸ“</div>
          <div>Nenhum cliente ativo encontrado.</div>
          <div class="text-sm mt-2">O checklist mostra clientes com assinatura e crÃ©dito que fazem pagamentos regulares.</div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- NavegaÃ§Ã£o entre meses -->
  <div class="mt-6 flex justify-center space-x-4">
    <%= link_to monthly_checklist_payments_path(month: (@month_date - 1.month).strftime("%Y-%m"), sort_by: @sort_by), 
        class: "px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-md dark:bg-gray-600 dark:hover:bg-gray-700" do %>
      â† <%= I18n.l((@month_date - 1.month), format: "%B %Y").capitalize %>
    <% end %>
    
    <%= link_to monthly_checklist_payments_path(month: Date.current.strftime("%Y-%m"), sort_by: @sort_by), 
        class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md dark:bg-indigo-700 dark:hover:bg-indigo-800" do %>
      MÃªs Atual
    <% end %>
    
    <%= link_to monthly_checklist_payments_path(month: (@month_date + 1.month).strftime("%Y-%m"), sort_by: @sort_by), 
        class: "px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-md dark:bg-gray-600 dark:hover:bg-gray-700" do %>
      <%= I18n.l((@month_date + 1.month), format: "%B %Y").capitalize %> â†’
    <% end %>
  </div>
  
  <!-- Quick access to recent months for late payments -->
  <div class="mt-4 text-center">
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Acesso rÃ¡pido para pagamentos atrasados:</p>
    <div class="flex justify-center space-x-2 flex-wrap">
      <% (1..6).each do |months_ago| %>
        <% target_month = Date.current - months_ago.months %>
        <%= link_to monthly_checklist_payments_path(month: target_month.strftime("%Y-%m"), sort_by: @sort_by), 
            class: "#{@month_date == target_month.beginning_of_month ? 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200' : 'bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300'} px-2 py-1 rounded text-xs hover:bg-purple-200 dark:hover:bg-purple-800 transition-colors duration-200 mb-1" do %>
          <%= I18n.l(target_month, format: "%b/%Y") %>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 