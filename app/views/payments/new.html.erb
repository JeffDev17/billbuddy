<div class="mb-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold">Novo Pagamento</h2>
    <%= link_to "Voltar", payments_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow">
    <%= form_with(model: @payment) do |form| %>
      <% if @payment.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2><%= pluralize(@payment.errors.count, "erro") %> impediram que este pagamento fosse salvo:</h2>
          <ul>
            <% @payment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :customer_id, "Cliente", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :customer_id, current_user.customers.where(status: 'active').order(name: :asc), :id, :name, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :payment_type, "Tipo de Pagamento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :payment_type, [["Crédito", "credit"], ["Assinatura", "subscription"]], {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :amount, "Valor (R$)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :amount, step: 0.01, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :payment_date, "Data do Pagamento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :payment_date, value: Date.today, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :notes, "Observações", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :notes, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Registrar Pagamento", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>