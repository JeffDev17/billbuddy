<div class="container mx-auto px-4">
  <!-- Header with Customer Info -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        üìä Hist√≥rico de Pagamentos
      </h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1">
        Cliente: <span class="font-medium text-gray-900 dark:text-gray-100"><%= @customer.name %></span>
      </p>
    </div>
    
    <div class="flex items-center space-x-3">
      <!-- Global Sensitive Data Toggle -->
      <div data-controller="global-sensitive-data">
        <button type="button" 
                data-action="click->global-sensitive-data#toggle"
                class="flex items-center space-x-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
          <span data-global-sensitive-data-target="toggleIcon">üëÅÔ∏è‚Äçüó®Ô∏è</span>
          <span>Mostrar Valores</span>
        </button>
      </div>
      
      <%= link_to "‚Üê Voltar", customer_path(@customer), 
          class: "px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" %>
      <%= link_to "‚ûï Novo Pagamento", new_customer_payment_path(@customer), 
          class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md" %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl">üí∞</span>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800 dark:text-green-200">Total Pago</p>
          <p class="text-lg font-bold text-green-900 dark:text-green-100" data-controller="sensitive-data">
            <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_paid, precision: 2) %></span>
          </p>
        </div>
      </div>
    </div>

    <div class="bg-red-50 dark:bg-red-900/20 p-4 rounded-lg">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl">üí∏</span>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-red-800 dark:text-red-200">Total Taxas</p>
          <p class="text-lg font-bold text-red-900 dark:text-red-100" data-controller="sensitive-data">
            <span data-sensitive-data-target="content">R$ <%= number_with_precision(@total_fees, precision: 2) %></span>
          </p>
        </div>
      </div>
    </div>

    <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl">üíµ</span>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-blue-800 dark:text-blue-200">Valor L√≠quido</p>
          <p class="text-lg font-bold text-blue-900 dark:text-blue-100" data-controller="sensitive-data">
            <span data-sensitive-data-target="content">R$ <%= number_with_precision(@net_total, precision: 2) %></span>
          </p>
        </div>
      </div>
    </div>

    <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <span class="text-2xl">üìã</span>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-purple-800 dark:text-purple-200">Total Pagamentos</p>
          <p class="text-lg font-bold text-purple-900 dark:text-purple-100">
            <%= @payments.count %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Methods Summary -->
  <% if @payment_methods_summary.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üí≥ Resumo por M√©todo de Pagamento</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @payment_methods_summary.each do |method, amount| %>
          <div class="text-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-sm text-gray-600 dark:text-gray-400">
              <%= Payment::PAYMENT_METHODS.find { |display, value| value == method }&.first || method&.humanize %>
            </div>
            <div class="text-lg font-bold text-gray-900 dark:text-gray-100" data-controller="sensitive-data">
              <span data-sensitive-data-target="content">R$ <%= number_with_precision(amount, precision: 2) %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Payment History by Month -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">üìÖ Hist√≥rico Detalhado</h3>
    </div>

    <% if @payments_by_month.any? %>
      <% @payments_by_month.each do |month, payments| %>
        <div class="border-b border-gray-200 dark:border-gray-700 last:border-b-0">
          <!-- Month Header -->
          <div class="px-6 py-3 bg-gray-50 dark:bg-gray-700">
            <h4 class="text-md font-medium text-gray-900 dark:text-gray-100">
              üìÜ <%= I18n.l(month, format: "%B %Y").capitalize %>
              <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">
                (<%= payments.count %> pagamento<%= payments.count != 1 ? 's' : '' %>)
              </span>
            </h4>
          </div>

          <!-- Payments in Month -->
          <div class="divide-y divide-gray-200 dark:divide-gray-700">
            <% payments.each do |payment| %>
              <div class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700">
                <div class="flex items-center justify-between">
                  <!-- Payment Info -->
                  <div class="flex items-center space-x-4">
                    <!-- Status Badge -->
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= case payment.status
                            when 'paid' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                            when 'cancelled' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                            else 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                            end %>">
                        <%= payment.status_display %>
                      </span>
                    </div>

                    <!-- Payment Details -->
                    <div class="flex-1">
                      <div class="flex items-center space-x-2">
                        <p class="text-sm font-medium text-gray-900 dark:text-gray-100">
                          <%= payment.payment_method_display %>
                        </p>
                        <% if payment.transaction_reference.present? %>
                          <span class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">
                            <%= payment.transaction_reference %>
                          </span>
                        <% end %>
                      </div>
                      
                      <div class="flex items-center space-x-2 mt-1">
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                          <%= payment.payment_date.strftime("%d/%m/%Y") %>
                        </p>
                        <% if payment.received_at.present? %>
                          <span class="text-xs text-green-600 dark:text-green-400">
                            ‚Ä¢ Recebido em <%= payment.received_at.strftime("%d/%m/%Y √†s %H:%M") %>
                          </span>
                        <% end %>
                        <% if payment.bank_name.present? %>
                          <span class="text-xs text-gray-500 dark:text-gray-400">
                            ‚Ä¢ <%= payment.bank_name %>
                          </span>
                        <% end %>
                      </div>

                      <% if payment.notes.present? %>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                          üí¨ <%= payment.notes %>
                        </p>
                      <% end %>
                    </div>
                  </div>

                  <!-- Amount and Actions -->
                  <div class="flex items-center space-x-4">
                    <!-- Payment Amount -->
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900 dark:text-gray-100" data-controller="sensitive-data">
                        <span data-sensitive-data-target="content">R$ <%= number_with_precision(payment.amount, precision: 2) %></span>
                      </p>
                      <% if payment.fees.present? && payment.fees > 0 %>
                        <p class="text-xs text-red-600 dark:text-red-400" data-controller="sensitive-data">
                          <span data-sensitive-data-target="content">Taxas: R$ <%= number_with_precision(payment.fees, precision: 2) %></span>
                        </p>
                        <p class="text-xs text-green-600 dark:text-green-400" data-controller="sensitive-data">
                          <span data-sensitive-data-target="content">L√≠quido: R$ <%= number_with_precision(payment.net_amount, precision: 2) %></span>
                        </p>
                      <% end %>
                      <% if payment.installments.present? && payment.installments > 1 %>
                        <p class="text-xs text-blue-600 dark:text-blue-400">
                          <%= payment.installments %>x
                        </p>
                      <% end %>
                    </div>

                    <!-- Actions -->
                    <div class="flex space-x-2">
                      <%= link_to edit_customer_payment_path(@customer, payment), 
                          class: "px-2 py-1 text-xs bg-indigo-100 text-indigo-700 rounded hover:bg-indigo-200 dark:bg-indigo-900 dark:text-indigo-300 dark:hover:bg-indigo-800 transition-colors",
                          title: "Editar pagamento" do %>
                        ‚úèÔ∏è Editar
                      <% end %>
                      
                      <%= form_with model: [@customer, payment], method: :delete, local: true, 
                          class: "inline-block" do |form| %>
                        <%= form.submit "üóëÔ∏è Excluir", 
                            class: "px-2 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200 dark:bg-red-900 dark:text-red-300 dark:hover:bg-red-800 transition-colors cursor-pointer",
                            title: "Excluir pagamento",
                            data: { confirm: "Tem certeza que deseja excluir este pagamento de R$ #{number_with_precision(payment.amount, precision: 2)}?" } %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
        <div class="text-6xl mb-4">üìã</div>
        <h3 class="text-lg font-medium mb-2">Nenhum pagamento encontrado</h3>
        <p class="text-sm">Este cliente ainda n√£o possui hist√≥rico de pagamentos.</p>
        <div class="mt-4">
          <%= link_to "‚ûï Adicionar Primeiro Pagamento", new_customer_payment_path(@customer), 
              class: "inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm rounded-md" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Global Sensitive Data Toggle -->
  <div class="fixed bottom-6 right-6" data-controller="global-sensitive-data">
    <button type="button" 
            data-action="click->global-sensitive-data#toggle"
            class="flex items-center space-x-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors shadow-lg">
      <span data-global-sensitive-data-target="toggleIcon">üëÅÔ∏è‚Äçüó®Ô∏è</span>
      <span>Mostrar/Ocultar Valores</span>
    </button>
  </div>
</div> 