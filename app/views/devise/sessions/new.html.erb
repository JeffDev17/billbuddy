<!-- Login Page -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-50 dark:from-slate-900 dark:via-purple-900 dark:to-indigo-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Header -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg">
        <i class="fas fa-calculator text-white text-2xl"></i>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-gray-900 dark:text-white">
        Bem-vindo ao BillBuddy
      </h2>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        Entre na sua conta para gerenciar seus agendamentos e clientes
      </p>
    </div>

    <!-- Login Form -->
    <div class="bg-white dark:bg-gray-800 py-8 px-6 shadow-xl rounded-2xl border border-gray-200 dark:border-gray-700">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6") do |f| %>
        
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <i class="fas fa-envelope mr-2 text-gray-400"></i>
            Email
          <% end %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-200 ease-in-out",
              placeholder: "seu@email.com" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <i class="fas fa-lock mr-2 text-gray-400"></i>
            Senha
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-200 ease-in-out",
              placeholder: "Digite sua senha" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700" %>
            <%= f.label :remember_me, "Manter-me conectado", class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Entrar", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 ease-in-out transform hover:scale-105" %>
        </div>
      <% end %>

      <!-- Demo User Info -->
      <div class="mt-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-4">
        <div class="flex items-start">
          <i class="fas fa-info-circle text-blue-500 mr-3 mt-0.5"></i>
          <div class="flex-1">
            <h3 class="text-sm font-semibold text-blue-900 dark:text-blue-200 mb-2">Acesso de Demonstração</h3>
            <div class="space-y-1 text-xs text-blue-800 dark:text-blue-300">
              <p><strong>Email:</strong> <code class="bg-blue-100 dark:bg-blue-900/50 px-2 py-0.5 rounded">demo@billbuddy.com</code></p>
              <p><strong>Senha:</strong> <code class="bg-blue-100 dark:bg-blue-900/50 px-2 py-0.5 rounded">demo123456</code></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Links -->
      <div class="mt-4 space-y-3">
        <div class="text-center">
          <%= link_to "Esqueci minha senha", new_password_path(resource_name), 
              class: "text-sm text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 font-medium transition-colors duration-200" %>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl p-4">
        <div class="flex">
          <i class="fas fa-check-circle text-green-400 mr-3 mt-0.5"></i>
          <p class="text-sm text-green-800 dark:text-green-200"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4">
        <div class="flex">
          <i class="fas fa-exclamation-triangle text-red-400 mr-3 mt-0.5"></i>
          <p class="text-sm text-red-800 dark:text-red-200"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <!-- Footer -->
    <div class="text-center">
      <p class="text-xs text-gray-500 dark:text-gray-400">
        © <%= Date.current.year %> BillBuddy. Sistema de gestão para profissionais autônomos.
      </p>
    </div>
  </div>
</div>
