<div class="mb-8">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Eventos do Calendário</h2>
    <%= link_to "← Voltar aos Calendários", calendars_path, class: "text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden dark:bg-dark-bg-secondary">
    <div class="px-6 py-4 border-b dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Lista de Eventos</h3>
    </div>

    <div class="divide-y dark:divide-gray-700">
      <% if @event_list&.items&.any? %>
        <% @event_list.items.each do |event| %>
          <div class="px-6 py-4">
            <div class="flex justify-between">
              <div>
                <p class="font-medium text-indigo-600 dark:text-indigo-400"><%= event.summary %></p>
                <p class="text-sm text-gray-700 dark:text-gray-300"><%= event.description %></p>
              </div>
              <div class="text-right">
                <p class="text-gray-900 dark:text-gray-100">
                  <%= event.start.date_time&.strftime("%d/%m/%Y %H:%M") || event.start.date %>
                </p>
                <% if event.end %>
                  <p class="text-sm text-indigo-600 dark:text-indigo-400">
                    até <%= event.end.date_time&.strftime("%H:%M") || event.end.date %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-4 text-center text-gray-700 dark:text-gray-300">
          Nenhum evento encontrado neste calendário.
        </div>
      <% end %>
    </div>
  </div>
</div>