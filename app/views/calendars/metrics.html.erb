<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">üìä M√©tricas & Analytics</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Insights sobre seus compromissos e faturamento</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Earnings -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
              <span class="text-white text-sm">üí∞</span>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                Faturamento Realizado
              </dt>
              <dd class="text-lg font-medium text-gray-900 dark:text-gray-100">
                R$ <%= @monthly_summary[:earnings][:completed] %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Projected Earnings -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
              <span class="text-white text-sm">üìà</span>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                Proje√ß√£o Total
              </dt>
              <dd class="text-lg font-medium text-gray-900 dark:text-gray-100">
                R$ <%= @monthly_summary[:earnings][:projected] %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Classes -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
              <span class="text-white text-sm">üìö</span>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                Aulas do M√™s
              </dt>
              <dd class="text-lg font-medium text-gray-900 dark:text-gray-100">
                <%= @monthly_summary[:classes][:total] %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Sync Status -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-indigo-500 rounded-md flex items-center justify-center">
              <span class="text-white text-sm">üîÑ</span>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                Sincroniza√ß√£o
              </dt>
              <dd class="text-lg font-medium text-gray-900 dark:text-gray-100">
                <%= @monthly_summary[:sync_status][:sync_percentage] %>%
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Class Distribution -->
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üìä Distribui√ß√£o de Aulas</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Conclu√≠das</span>
          <span class="text-sm font-medium text-green-600 dark:text-green-400">
            <%= @monthly_summary[:classes][:completed] %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Agendadas</span>
          <span class="text-sm font-medium text-blue-600 dark:text-blue-400">
            <%= @monthly_summary[:classes][:scheduled] %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Previs√£o Mensal</span>
          <span class="text-sm font-medium text-purple-600 dark:text-purple-400">
            <%= @monthly_summary[:classes][:forecast] %>
          </span>
        </div>
      </div>
    </div>

    <!-- Workload Analysis -->
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">‚è∞ An√°lise de Carga de Trabalho</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Total de Horas</span>
          <span class="text-sm font-medium text-gray-900 dark:text-gray-100">
            <%= @monthly_summary[:workload][:total_hours] %>h
          </span>
        </div>
        
        <div class="mt-4">
          <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Dias mais ocupados:</h4>
          <% @monthly_summary[:workload][:busiest_days].each do |day, count| %>
            <div class="flex justify-between items-center mb-1">
              <span class="text-xs text-gray-600 dark:text-gray-400"><%= day %></span>
              <span class="text-xs font-medium text-gray-900 dark:text-gray-100"><%= count %> aulas</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Credit Analysis -->
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üí≥ An√°lise de Cr√©ditos</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Clientes com poucos cr√©ditos</span>
          <span class="text-sm font-medium text-red-600 dark:text-red-400">
            <%= @monthly_summary[:credits][:customers_low_credits] %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Taxa de consumo</span>
          <span class="text-sm font-medium <%= @monthly_summary[:credits][:consumption_rate] > 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
            <%= @monthly_summary[:credits][:consumption_rate] > 0 ? '+' : '' %><%= @monthly_summary[:credits][:consumption_rate] %>%
          </span>
        </div>
      </div>
    </div>

    <!-- Sync Status Detail -->
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üîÑ Status de Sincroniza√ß√£o</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Total de compromissos</span>
          <span class="text-sm font-medium text-gray-900 dark:text-gray-100">
            <%= @monthly_summary[:sync_status][:total_appointments] %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Sincronizados</span>
          <span class="text-sm font-medium text-green-600 dark:text-green-400">
            <%= @monthly_summary[:sync_status][:synced_appointments] %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600 dark:text-gray-400">Pendentes</span>
          <span class="text-sm font-medium text-yellow-600 dark:text-yellow-400">
            <%= @monthly_summary[:sync_status][:pending_sync] %>
          </span>
        </div>
        
        <!-- Progress Bar -->
        <div class="mt-4">
          <div class="flex justify-between text-xs mb-1">
            <span class="text-gray-600 dark:text-gray-400">Progresso de sincroniza√ß√£o</span>
            <span class="text-gray-900 dark:text-gray-100"><%= @monthly_summary[:sync_status][:sync_percentage] %>%</span>
          </div>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
            <div class="bg-green-600 h-2 rounded-full" style="width: <%= @monthly_summary[:sync_status][:sync_percentage] %>%"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Top Customers by Earnings -->
  <% if @monthly_summary[:earnings][:by_customer].any? %>
    <div class="mt-8 bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üèÜ Top Clientes (Faturamento)</h3>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Cliente
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Faturamento
              </th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @monthly_summary[:earnings][:by_customer].each do |customer_name, earnings| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">
                  <%= customer_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
                  R$ <%= earnings %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Daily Schedule -->
  <div class="mt-8 bg-white dark:bg-gray-800 shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">üìÖ Agenda de Hoje</h3>
    <% if @daily_schedule[:appointments].any? %>
      <div class="space-y-3">
        <% @daily_schedule[:appointments].each do |appointment| %>
          <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div>
              <span class="font-medium text-gray-900 dark:text-gray-100">
                <%= appointment[:time] %> - <%= appointment[:customer] %>
              </span>
              <span class="text-sm text-gray-600 dark:text-gray-400 ml-2">
                (<%= appointment[:duration] %>h)
              </span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-2 py-1 text-xs rounded-full 
                <% case appointment[:status] %>
                <% when 'scheduled' %>
                  bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200
                <% when 'completed' %>
                  bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
                <% when 'cancelled' %>
                  bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200
                <% end %>">
                <%= appointment[:status].humanize %>
              </span>
              <% if appointment[:synced] %>
                <span class="text-green-500 text-sm">‚úì</span>
              <% else %>
                <span class="text-yellow-500 text-sm">‚è≥</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
        <div class="flex justify-between text-sm">
          <span class="text-blue-700 dark:text-blue-300">Total de aulas hoje:</span>
          <span class="font-medium text-blue-900 dark:text-blue-100">
            <%= @daily_schedule[:total_classes] %> (<%= @daily_schedule[:total_hours] %>h)
          </span>
        </div>
      </div>
    <% else %>
      <p class="text-gray-500 dark:text-gray-400 text-center py-4">
        Nenhum compromisso agendado para hoje.
      </p>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="mt-8 flex justify-center space-x-4">
    <%= link_to "üìÖ Voltar para Calend√°rio", calendars_path(view_mode: 'appointments'), 
        class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "üë• Ver Clientes", customers_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div> 