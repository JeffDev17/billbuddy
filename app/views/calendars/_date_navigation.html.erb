<%= turbo_frame_tag "date_navigation" do %>
  <div class="flex justify-between items-center">
    <div class="flex space-x-4 items-center">
      <%= link_to calendars_path(date: @selected_date.yesterday), 
          class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200",
          data: { 
            turbo: true,
            turbo_stream: true
          } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">
        <%= @selected_date.strftime("%d/%m/%Y") %>
        <% if @selected_date.today? %>
          <span class="ml-2 text-sm text-indigo-600 dark:text-indigo-400">(Hoje)</span>
        <% end %>
      </h3>

      <%= link_to calendars_path(date: @selected_date.tomorrow), 
          class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200",
          data: { 
            turbo: true,
            turbo_stream: true
          } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>

    <div class="flex items-center space-x-4">
      <%= link_to "Hoje", 
          calendars_path, 
          class: "text-sm text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300",
          data: { 
            turbo: true,
            turbo_stream: true
          } %>
      <input type="date" 
             id="dateSelector" 
             value="<%= @selected_date.strftime('%Y-%m-%d') %>"
             class="text-sm rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200 focus:border-indigo-500 focus:ring-indigo-500"
             data-controller="date-selector"
             data-action="change->date-selector#navigate">
    </div>
  </div>
<% end %> 