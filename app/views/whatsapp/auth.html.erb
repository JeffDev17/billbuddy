      <!-- Loading State -->
      <div data-whatsapp-manager-target="loadingState" class="text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900/20 rounded-full mb-4">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
        </div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Inicializando WhatsApp...</h3>
        <p class="text-gray-600 dark:text-gray-400">Por favor, aguarde enquanto conectamos com o servi√ßo WhatsApp</p>
      </div>

      <!-- QR Code Container -->
      <div data-whatsapp-manager-target="qrContainer" style="display: none;" class="text-center">
        <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl p-6 mb-6">
          <div class="flex items-center justify-center mb-4">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900/40 rounded-full flex items-center justify-center mr-3">
              <i class="fas fa-mobile-alt text-green-600 dark:text-green-400 text-xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-green-900 dark:text-green-100">Escaneie o QR Code</h3>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-sm text-green-800 dark:text-green-200">
            <div class="flex flex-col items-center p-3 bg-green-100/50 dark:bg-green-900/30 rounded-lg">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-xs font-bold mb-2">1</div>
              <p class="text-center">Abra o WhatsApp no seu celular</p>
            </div>
            <div class="flex flex-col items-center p-3 bg-green-100/50 dark:bg-green-900/30 rounded-lg">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-xs font-bold mb-2">2</div>
              <p class="text-center">Toque no menu <strong>(‚ãÆ)</strong></p>
            </div>
            <div class="flex flex-col items-center p-3 bg-green-100/50 dark:bg-green-900/30 rounded-lg">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-xs font-bold mb-2">3</div>
              <p class="text-center">Selecione <strong>"Dispositivos conectados"</strong></p>
            </div>
            <div class="flex flex-col items-center p-3 bg-green-100/50 dark:bg-green-900/30 rounded-lg">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center text-xs font-bold mb-2">4</div>
              <p class="text-center">Escaneie o c√≥digo abaixo</p>
            </div>
          </div>
        </div>
        
        <!-- QR Code Display Area -->
        <div class="bg-white dark:bg-gray-700 rounded-xl p-8 shadow-lg inline-block border-2 border-gray-100 dark:border-gray-600">
          <div data-whatsapp-manager-target="qrCode" class="flex justify-center items-center min-h-[280px] min-w-[280px]">
            <div class="animate-pulse">
              <div class="h-64 w-64 bg-gray-200 dark:bg-gray-600 rounded-lg flex items-center justify-center">
                <i class="fas fa-qrcode text-4xl text-gray-400 dark:text-gray-500"></i>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-6 space-y-3">
          <button data-action="click->whatsapp-manager#refreshQRCode" 
                  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
            <i class="fas fa-sync-alt mr-2"></i> Gerar novo QR Code
          </button>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <i class="fas fa-clock mr-1"></i>
            O QR Code expira em alguns minutos. Clique para gerar um novo se necess√°rio.
          </p>
        </div>
      </div>

      <!-- Success State -->
      <div data-whatsapp-manager-target="successState" style="display: none;" class="text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 dark:bg-green-900/20 rounded-full mb-6">
          <i class="fas fa-check-circle text-4xl text-green-600 dark:text-green-400"></i>
        </div>
        <h3 class="text-xl font-semibold text-green-800 dark:text-green-200 mb-3">WhatsApp Conectado com Sucesso!</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          Sua conta do WhatsApp est√° agora conectada ao sistema. Voc√™ pode fechar esta p√°gina e come√ßar a usar o sistema.
        </p>
        <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
          <div class="flex items-center justify-center text-green-800 dark:text-green-200">
            <i class="fas fa-info-circle mr-2"></i>
            <span class="text-sm">O WhatsApp permanecer√° conectado automaticamente</span>
          </div>
        </div>
      </div>

      <!-- Error State -->
      <div data-whatsapp-manager-target="errorState" style="display: none;" class="text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 dark:bg-red-900/20 rounded-full mb-6">
          <i class="fas fa-exclamation-triangle text-4xl text-red-600 dark:text-red-400"></i>
        </div>
        <h3 class="text-xl font-semibold text-red-800 dark:text-red-200 mb-3">Erro na Conex√£o</h3>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
          <p data-whatsapp-manager-target="errorMessage" class="text-red-700 dark:text-red-300"></p>
        </div>
        <div class="space-y-3">
          <button data-action="click->whatsapp-manager#restart" 
                  class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
            <i class="fas fa-redo mr-2"></i> Tentar Novamente
          </button>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Se o problema persistir, tente reiniciar o servi√ßo usando os bot√µes acima
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Appointment Reminders Card -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mt-6 border border-gray-200 dark:border-gray-700">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <i class="fas fa-bell text-blue-500 text-xl"></i>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Lembretes de Compromissos</h2>
        </div>
        <button data-action="click->whatsapp-manager#toggleReminders"
                data-whatsapp-manager-target="reminderToggle"
                class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 <%= current_user.appointment_reminders_enabled ? 'bg-blue-600' : 'bg-gray-200' %>">
          <span class="<%= current_user.appointment_reminders_enabled ? 'translate-x-6' : 'translate-x-1' %> inline-block h-4 w-4 transform rounded-full bg-white transition-transform"></span>
        </button>
      </div>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
        Envie lembretes autom√°ticos 30 minutos antes dos compromissos
      </p>
    </div>

    <!-- Stats Section -->
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-blue-600 dark:text-blue-400 font-medium">Hoje</p>
              <p class="text-2xl font-bold text-blue-900 dark:text-blue-100" data-whatsapp-manager-target="statTotal"><%= @reminder_stats[:total_today] %></p>
            </div>
            <i class="fas fa-calendar-day text-blue-400 text-2xl"></i>
          </div>
        </div>

        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-green-600 dark:text-green-400 font-medium">Enviados</p>
              <p class="text-2xl font-bold text-green-900 dark:text-green-100" data-whatsapp-manager-target="statSent"><%= @reminder_stats[:sent_today] %></p>
            </div>
            <i class="fas fa-check-circle text-green-400 text-2xl"></i>
          </div>
        </div>

        <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-yellow-600 dark:text-yellow-400 font-medium">Pendentes</p>
              <p class="text-2xl font-bold text-yellow-900 dark:text-yellow-100" data-whatsapp-manager-target="statPending"><%= @reminder_stats[:pending_today] %></p>
            </div>
            <i class="fas fa-clock text-yellow-400 text-2xl"></i>
          </div>
        </div>

        <div class="bg-red-50 dark:bg-red-900/20 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-red-600 dark:text-red-400 font-medium">Falhas</p>
              <p class="text-2xl font-bold text-red-900 dark:text-red-100" data-whatsapp-manager-target="statFailed"><%= @reminder_stats[:failed_today] %></p>
            </div>
            <i class="fas fa-exclamation-circle text-red-400 text-2xl"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming Reminders Section -->
    <div class="p-6">
      <div class="mb-4">
        <h3 class="text-md font-semibold text-gray-900 dark:text-white">Pr√≥ximos Lembretes</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Clique em "Enviar" para testar o lembrete manualmente</p>
      </div>

      <div data-whatsapp-manager-target="remindersList" class="space-y-2">
        <% if @upcoming_reminders.any? %>
          <% @upcoming_reminders.each do |appointment| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="flex items-center space-x-3 flex-1">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/40 rounded-full flex items-center justify-center">
                  <i class="fas fa-user text-blue-600 dark:text-blue-400"></i>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white"><%= appointment.customer.name %></p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    <%= appointment.scheduled_at.strftime("%H:%M") %> 
                    <% minutes_until = ((appointment.scheduled_at - Time.current) / 60).round %>
                    <span class="text-xs">(em <%= minutes_until %> min)</span>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <% if appointment.reminder_sent_at %>
                  <span class="px-2 py-1 bg-green-100 dark:bg-green-900/40 text-green-800 dark:text-green-200 text-xs rounded-full">
                    <i class="fas fa-check mr-1"></i>Enviado
                  </span>
                <% else %>
                  <button data-action="click->whatsapp-manager#sendSingleReminder"
                          data-appointment-id="<%= appointment.id %>"
                          class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded-lg transition-colors">
                    <i class="fas fa-paper-plane mr-1"></i>Enviar
                  </button>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-500 dark:text-gray-400">
            <i class="fas fa-inbox text-4xl mb-2"></i>
            <p>Nenhum lembrete pendente no momento</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Debug Info -->
  <div class="mt-6">
    <details class="bg-gray-50 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
      <summary class="p-4 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
          <i class="fas fa-bug mr-2"></i> Informa√ß√µes T√©cnicas
        </span>
      </summary>
      <div class="p-4 border-t border-gray-200 dark:border-gray-700">
        <pre data-whatsapp-manager-target="debugInfo" 
             class="text-xs text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-900 p-3 rounded overflow-x-auto"></pre>
      </div>
    </details>
  </div>
</div> 