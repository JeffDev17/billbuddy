<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(customer.errors.count, "erro") %> impediram que este cliente fosse salvo:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :phone, "Telefone", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :status, Customer.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :plan_type, "Tipo de Plano", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :plan_type, Customer.plan_types.keys.map { |plan_type| [plan_type.humanize, plan_type] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit customer.new_record? ? "Criar Cliente" : "Atualizar Cliente", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
<% end %>