<!-- Change Password Page -->
<div class="max-w-2xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
          <i class="fas fa-key mr-3 text-green-600 dark:text-green-400"></i>
          Alterar Senha
        </h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Mantenha sua conta segura com uma senha forte</p>
      </div>
      <%= link_to profile_path, 
          class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 font-medium transition-colors duration-200" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Voltar ao Perfil
      <% end %>
    </div>
  </div>

  <!-- Change Password Form -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4">
      <h2 class="text-lg font-semibold text-white flex items-center">
        <i class="fas fa-shield-alt mr-3"></i>
        Nova Senha
      </h2>
    </div>
    
    <div class="p-6">
      <%= form_with model: @user, url: update_password_path, method: :patch, local: true, class: "space-y-6" do |f| %>
        
        <!-- Error Messages -->
        <% if flash[:alert] %>
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4">
            <div class="flex">
              <i class="fas fa-exclamation-triangle text-red-400 mr-3 mt-0.5"></i>
              <p class="text-sm text-red-800 dark:text-red-200"><%= flash[:alert] %></p>
            </div>
          </div>
        <% end %>

        <% if @user.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4">
            <div class="flex">
              <i class="fas fa-exclamation-triangle text-red-400 mr-3 mt-0.5"></i>
              <div class="text-sm text-red-800 dark:text-red-200">
                <p class="font-medium mb-2">Erro ao alterar senha:</p>
                <ul class="list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Current Password Field -->
        <div>
          <%= label_tag :current_password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <i class="fas fa-lock mr-2 text-gray-400"></i>
            Senha Atual
          <% end %>
          <%= password_field_tag :current_password, "", 
              autofocus: true, 
              autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-200 ease-in-out",
              placeholder: "Digite sua senha atual" %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Digite sua senha atual para confirmar a alteração.
          </p>
        </div>

        <!-- New Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <i class="fas fa-key mr-2 text-gray-400"></i>
            Nova Senha
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-200 ease-in-out",
              placeholder: "Digite sua nova senha" %>
        </div>

        <!-- Confirm Password Field -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            <i class="fas fa-check-circle mr-2 text-gray-400"></i>
            Confirmar Nova Senha
          <% end %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-200 ease-in-out",
              placeholder: "Confirme sua nova senha" %>
        </div>

        <!-- Password Requirements -->
        <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-4">
          <div class="flex">
            <i class="fas fa-info-circle text-blue-400 mr-3 mt-0.5"></i>
            <div class="text-sm text-blue-800 dark:text-blue-200">
              <p class="font-medium mb-2">Requisitos da nova senha:</p>
              <ul class="space-y-1 text-xs">
                <li class="flex items-center">
                  <i class="fas fa-check text-blue-500 mr-2"></i>
                  Mínimo de 6 caracteres
                </li>
                <li class="flex items-center">
                  <i class="fas fa-check text-blue-500 mr-2"></i>
                  Use uma combinação de letras, números e símbolos
                </li>
                <li class="flex items-center">
                  <i class="fas fa-check text-blue-500 mr-2"></i>
                  Evite senhas óbvias como "123456" ou "password"
                </li>
                <li class="flex items-center">
                  <i class="fas fa-check text-blue-500 mr-2"></i>
                  Não reutilize senhas de outros sites
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Security Notice -->
        <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-xl p-4">
          <div class="flex">
            <i class="fas fa-shield-alt text-yellow-400 mr-3 mt-0.5"></i>
            <div class="text-sm text-yellow-800 dark:text-yellow-200">
              <p class="font-medium mb-1">Importante:</p>
              <p class="text-xs">
                Após alterar sua senha, você permanecerá logado neste dispositivo, 
                mas será desconectado de todos os outros dispositivos por segurança.
              </p>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-between">
          <%= link_to profile_path, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-xl text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200" do %>
            <i class="fas fa-times mr-2"></i>
            Cancelar
          <% end %>
          
          <%= f.submit "Alterar Senha", 
              class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-xl text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 transform hover:scale-105",
              data: { confirm: 'Tem certeza que deseja alterar sua senha?' } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Security Tips -->
  <div class="mt-6 bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-cyan-600 px-6 py-4">
      <h2 class="text-lg font-semibold text-white flex items-center">
        <i class="fas fa-lightbulb mr-3"></i>
        Dicas de Segurança
      </h2>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex items-start">
          <i class="fas fa-key text-blue-500 mr-3 mt-1"></i>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Use senhas únicas</h3>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
              Nunca reutilize a mesma senha em outros sites ou aplicativos.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <i class="fas fa-clock text-green-500 mr-3 mt-1"></i>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Altere regularmente</h3>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
              Considere alterar sua senha a cada 6 meses para máxima segurança.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <i class="fas fa-eye-slash text-purple-500 mr-3 mt-1"></i>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Mantenha privada</h3>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
              Nunca compartilhe sua senha com outras pessoas.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <i class="fas fa-mobile-alt text-orange-500 mr-3 mt-1"></i>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Use gerenciador</h3>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
              Considere usar um gerenciador de senhas confiável.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
