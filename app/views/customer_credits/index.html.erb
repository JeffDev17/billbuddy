<div class="mb-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold">Créditos de <%= @customer.name %></h2>
    <div>
      <%= link_to "Adicionar Créditos", new_customer_customer_credit_path(@customer), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 mr-2" %>
      <%= link_to "Voltar", customer_path(@customer), class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pacote</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horas Iniciais</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horas Restantes</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data de Compra</th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @customer_credits.each do |credit| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= credit.service_package.name %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= credit.service_package.hours %> horas</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if credit.remaining_hours > 0 %>
              <span class="text-green-600"><%= credit.remaining_hours %> horas</span>
            <% else %>
              <span class="text-red-600">0 horas</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap"><%= credit.purchase_date.strftime("%d/%m/%Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <% if @customer_credits.empty? %>
      <div class="px-6 py-4 text-center text-gray-500">
        Nenhum crédito encontrado.
      </div>
    <% end %>
  </div>
</div>