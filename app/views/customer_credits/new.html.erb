<div class="mb-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold">Adicionar Cr√©ditos para <%= @customer.name %></h2>
    <%= link_to "Voltar", customer_customer_credits_path(@customer), class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow" data-controller="customer-credit-form">
    <%= form_with(model: [@customer, @customer_credit]) do |form| %>
      <% if @customer_credit.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2><%= pluralize(@customer_credit.errors.count, "erro") %> impediram que estes cr√©ditos fossem salvos:</h2>
          <ul>
            <% @customer_credit.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Credit Type Selection -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-3">Tipo de Cr√©dito</label>
        <div class="space-y-3">
          <label class="flex items-center">
            <input type="radio" name="credit_type" value="package" checked 
                   class="text-blue-600 focus:ring-blue-500" 
                   data-customer-credit-form-target="creditType"
                   data-action="change->customer-credit-form#toggleCreditType">
            <span class="ml-2 text-sm text-gray-700">üì¶ Usar Pacote de Servi√ßo</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="credit_type" value="custom" 
                   class="text-blue-600 focus:ring-blue-500"
                   data-customer-credit-form-target="creditType"
                   data-action="change->customer-credit-form#toggleCreditType">
            <span class="ml-2 text-sm text-gray-700">‚ö° Cr√©dito Personalizado</span>
          </label>
        </div>
      </div>

      <!-- Package Selection (shown by default) -->
      <div class="mb-4" data-customer-credit-form-target="packageSection">
        <%= form.label :service_package_id, "Pacote de Servi√ßo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :service_package_id, ServicePackage.active, :id, :name, 
            { prompt: "Selecione um pacote..." }, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Custom Hours Section (hidden by default) -->
      <div class="mb-4 hidden" data-customer-credit-form-target="customSection">
        <%= form.label :remaining_hours, "Quantidade de Horas", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :remaining_hours, step: 0.5, min: 0.5, placeholder: "Ex: 4.0", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        <p class="mt-1 text-xs text-gray-500">Informe a quantidade de horas para este cr√©dito personalizado</p>
      </div>

      <div class="mb-4">
        <%= form.label :purchase_date, "Data de Compra", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :purchase_date, value: Date.today, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Adicionar Cr√©ditos", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>