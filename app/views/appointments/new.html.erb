<div class="mb-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold">Novo Compromisso</h2>
    <% if @customer %>
      <%= link_to "Voltar", customer_appointments_path(@customer), class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    <% else %>
      <%= link_to "Voltar", appointments_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    <% end %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow">
    <%= render 'form', appointment: @appointment %>
  </div>
</div>