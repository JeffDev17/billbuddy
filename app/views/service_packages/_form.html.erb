<%= form_with(model: service_package) do |form| %>
  <% if service_package.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(service_package.errors.count, "erro") %> impediram que este pacote fosse salvo:</h2>
      <ul>
        <% service_package.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :hours, "Horas", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :hours, step: 1, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, "PreÃ§o (R$)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :price, step: 0.01, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-4">
    <div class="flex items-center">
      <%= form.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= form.label :active, "Ativo", class: "ml-2 block text-sm text-gray-900" %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= form.submit service_package.new_record? ? "Criar Pacote" : "Atualizar Pacote", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
<% end %>