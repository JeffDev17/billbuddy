<div class="mb-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-dark-text-primary">Pacotes de Serviço</h2>
    <%= link_to "Novo Pacote", new_service_package_path, class: "px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600 dark:bg-dark-accent dark:hover:bg-dark-accent-hover" %>
  </div>

  <div class="bg-white dark:bg-dark-bg-secondary rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-dark-text-primary">Lista de Pacotes</h3>
    </div>

    <div class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @service_packages.each do |package| %>
        <div class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-dark-bg-tertiary">
          <div class="flex justify-between items-center">
            <div>
              <h4 class="text-lg font-medium text-gray-900 dark:text-dark-text-primary"><%= package.name %></h4>
              <p class="text-sm text-gray-500 dark:text-dark-text-secondary">
                <%= package.hours %> horas • R$ <%= package.price %>
              </p>
            </div>
            <div class="flex items-center space-x-2">
              <span class="<%= package.active? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' %> px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                <%= package.active? ? 'Ativo' : 'Inativo' %>
              </span>
              <div class="flex space-x-2">
                <%= link_to "Editar", edit_service_package_path(package), class: "px-3 py-1 bg-indigo-500 text-white rounded hover:bg-indigo-600 dark:bg-dark-accent dark:hover:bg-dark-accent-hover text-sm" %>
                <%= button_to "Excluir", service_package_path(package), method: :delete, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700 text-sm", data: { confirm: "Tem certeza que deseja excluir este pacote?" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>