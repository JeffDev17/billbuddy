# Linguagens
*.rb linguist-language=Ruby
*.erb linguist-language=Ruby
*.rake linguist-language=Ruby

# Ignorar arquivos gerados/vendor do language detection
app/assets/builds/* linguist-generated=true
node_modules/* linguist-vendored=true
vendor/* linguist-vendored=true
public/assets/* linguist-generated=true
*.map linguist-generated=true
yarn.lock linguist-generated=true
package-lock.json linguist-generated=true

# Documentação
*.md linguist-documentation=true

# Forçar Ruby como linguagem principal
*.rb text=auto
*.erb text=auto